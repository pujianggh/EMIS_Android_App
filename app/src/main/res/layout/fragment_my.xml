<?xml version="1.0" encoding="utf-8"?>
<cn.bingoogolapple.refreshlayout.BGARefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root_refresh"
    style="@style/MatchMatch"
    android:background="@color/color_black_bg">

    <ScrollView
        style="@style/MatchAuto"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout style="@style/MatchMatch.Vertical">

            <LinearLayout
                style="@style/MatchMatch.Horizontal"
                android:layout_height="160dp"
                android:background="@drawable/ic_main_my_background"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/igv_my_head"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="25dp"
                    android:src="@drawable/icon_my_default_head" />

                <TextView
                    android:id="@+id/tv_my_userName"
                    style="@style/Font_MatchWrap_Style"
                    android:layout_marginLeft="25dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="EMIS" />
            </LinearLayout>

            <LinearLayout
                style="@style/MatchMatch.Vertical"
                android:paddingLeft="@dimen/spacing_normal"
                android:paddingRight="@dimen/spacing_normal">

                <RelativeLayout
                    android:id="@+id/rly_one"
                    style="@style/LinearLayout_Table_Style"
                    android:layout_height="@dimen/spacing_maxplus">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_main_my_setting" />

                    <TextView
                        style="@style/Font_MatchWrap_Style"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="35dp"
                        android:text="系统设置1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_arrow_white" />
                </RelativeLayout>

                <RelativeLayout
                    style="@style/LinearLayout_Table_Style"
                    android:layout_height="@dimen/spacing_maxplus">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_main_my_setting" />

                    <TextView
                        style="@style/Font_MatchWrap_Style"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="35dp"
                        android:text="系统设置2" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_arrow_white" />
                </RelativeLayout>

                <RelativeLayout
                    style="@style/LinearLayout_Table_Style"
                    android:layout_height="@dimen/spacing_maxplus">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_main_my_setting" />

                    <TextView
                        style="@style/Font_MatchWrap_Style"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="35dp"
                        android:text="系统设置3" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_arrow_white" />
                </RelativeLayout>

                <RelativeLayout
                    style="@style/LinearLayout_Table_Style"
                    android:layout_height="@dimen/spacing_maxplus">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_main_my_setting" />

                    <TextView
                        style="@style/Font_MatchWrap_Style"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="35dp"
                        android:text="系统设置4" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_arrow_white" />
                </RelativeLayout>

                <RelativeLayout
                    style="@style/LinearLayout_Table_Style"
                    android:layout_height="@dimen/spacing_maxplus">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_main_my_setting" />

                    <TextView
                        style="@style/Font_MatchWrap_Style"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="35dp"
                        android:text="系统设置5" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_arrow_white" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rly_setting"
                    style="@style/LinearLayout_Table_Style"
                    android:layout_height="@dimen/spacing_maxplus">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_main_my_setting" />

                    <TextView
                        style="@style/Font_MatchWrap_Style"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="35dp"
                        android:text="设置" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_arrow_white" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</cn.bingoogolapple.refreshlayout.BGARefreshLayout>