<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch.Vertical"
    android:background="@color/color_black_bg">

    <TextView
        style="@style/Font_MatchWrap_Style"
        android:layout_height="@dimen/item_dp50"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="登录"
        android:textSize="@dimen/textsize_title_big" />

    <LinearLayout
        style="@style/MatchWrap.Vertical"
        android:layout_marginTop="@dimen/item_dp100"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/item_dp100"
            android:src="@drawable/ic_app_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_dp45"
            android:layout_marginLeft="@dimen/item_dp10"
            android:layout_marginRight="@dimen/item_dp10"
            android:layout_marginTop="@dimen/item_dp30"
            android:background="@drawable/shape_edit_garybg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/item_dp20"
                android:layout_height="@dimen/item_dp20"
                android:layout_marginLeft="@dimen/item_dp20"
                android:src="@drawable/icon_login_account" />

            <EditText
                android:id="@+id/edt_account"
                style="@style/Edit_MatchWrap_Style"
                android:layout_marginLeft="@dimen/spacing_min"
                android:background="@null"
                android:hint="请输入账号"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/color_edit_hint"
                android:textCursorDrawable="@drawable/cursor_color_white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_dp45"
            android:layout_marginLeft="@dimen/item_dp10"
            android:layout_marginRight="@dimen/item_dp10"
            android:layout_marginTop="@dimen/item_dp15"
            android:background="@drawable/shape_edit_garybg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/item_dp20"
                android:layout_height="@dimen/item_dp20"
                android:layout_marginLeft="@dimen/item_dp20"
                android:src="@drawable/icon_login_account" />

            <EditText
                android:id="@+id/edt_password"
                style="@style/Edit_MatchWrap_Style"
                android:layout_marginLeft="@dimen/spacing_min"
                android:background="@null"
                android:hint="请输入密码"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:textColorHint="@color/color_edit_hint"
                android:textCursorDrawable="@drawable/cursor_color_white" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_next"
            style="@style/Button_Common_Style_Orange"
            android:layout_marginLeft="@dimen/item_dp10"
            android:layout_marginRight="@dimen/item_dp10"
            android:layout_marginTop="@dimen/item_dp30"
            android:text="登  录" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_company"
        style="@style/Font_MatchWrap_Style"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/item_dp15"
        android:gravity="center"
        android:text="TSHMAN SPEYER.ALLrights reserved."
        android:textSize="@dimen/textsize_min" />
</RelativeLayout>